#contentFancyForm
  %h1 Fancy Sliding Form with jQuery
  #wrapperFancyForm
    #stepsFancyForm
      %form#formElem{action: "", method: "post", name: "formElem"}
        %fieldset.step
          %legend Account
          %p
            %label{for: "username"} User name
            %input#username{name: "username"}/
          %p
            %label{for: "email"} Email
            %input#email{autocomplete: "OFF", name: "email", placeholder: "info@tympanus.net", type: "email"}/
          %p
            %label{for: "password"} Password
            %input#password{autocomplete: "OFF", name: "password", type: "password"}/
        %fieldset.step
          %legend Personal Details
          %p
            %label{for: "name"} Full Name
            %input#name{autocomplete: "OFF", name: "name", type: "text"}/
          %p
            %label{for: "country"} Country
            %input#country{autocomplete: "OFF", name: "country", type: "text"}/
          %p
            %label{for: "phone"} Phone
            %input#phone{autocomplete: "OFF", name: "phone", placeholder: "e.g. +351215555555", type: "tel"}/
          %p
            %label{for: "website"} Website
            %input#website{autocomplete: "OFF", name: "website", placeholder: "e.g. http://www.codrops.com", type: "tel"}/
        %fieldset.step
          %legend Payment
          %p
            %label{for: "cardtype"} Card
            %select#cardtype{name: "cardtype"}
              %option Visa
              %option Mastercard
              %option American Express
          %p
            %label{for: "cardnumber"} Card number
            %input#cardnumber{autocomplete: "OFF", name: "cardnumber", type: "number"}/
          %p
            %label{for: "secure"} Security code
            %input#secure{autocomplete: "OFF", name: "secure", type: "number"}/
          %p
            %label{for: "namecard"} Name on Card
            %input#namecard{autocomplete: "OFF", name: "namecard", type: "text"}/
        %fieldset.step
          %legend Settings
          %p
            %label{for: "newsletter"} Newsletter
            %select#newsletter{name: "newsletter"}
              %option{selected: "selected", value: "Daily"} Daily
              %option{value: "Weekly"} Weekly
              %option{value: "Monthly"} Monthly
              %option{value: "Never"} Never
          %p
            %label{for: "updates"} Updates
            %select#updates{name: "updates"}
              %option{selected: "selected", value: "1"} Package 1
              %option{value: "2"} Package 2
              %option{value: "0"} Don't send updates
          %p
            %label{for: "tagname"} Newsletter Tag
            %input#tagname{autocomplete: "OFF", name: "tagname", type: "text"}/
        %fieldset.step
          %legend Confirm
          %p
            Everything in the form was correctly filled
            if all the steps have a green checkmark icon.
            A red checkmark icon indicates that some field
            is missing or filled out with invalid data. In this
            last step the user can confirm the submission of
            the form.
          %p.submit
            %button#registerButton{type: "submit"} Register
    #navigationFancyForm{style: "display:none;"}
      %ul
        %li.selected
          %a{href: "#"} Account
        %li
          %a{href: "#"} Personal Details
        %li
          %a{href: "#"} Payment
        %li
          %a{href: "#"} Settings
        %li
          %a{href: "#"} Confirm

