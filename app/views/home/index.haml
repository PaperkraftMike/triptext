      %h1 Who do you want to text (when you arrive)?
    .w-row
      .w-col.w-col-4
        %h1.cell Cell Phone
      .w-col.w-col-8
        %input.w-input.cell-field{:type => "text", :placeholder => "Number", :name => "phone_number", :required => "required", :'data-name' => "phone_number"}
    .w-row
      .w-col.w-col-4
        %h1.cell-add + 1
