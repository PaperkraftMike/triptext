  // Section 2
  .w-container.header#second
    .header-container
      %h1 Where are you now?
    .w-row
      .w-col.w-col-4
        %h1.address Address
      .w-col.w-col-8
        %input.w-input.address-field{:type => "text", :placeholder => "Address", :name => "street", :required => "required", :'data-name' => "Address"}
    .w-row
      .w-col.w-col-4
        %h1.zip-code Zip Code
      .w-col.w-col-8
        %input.w-input.address-field{:type => "text", :placeholder => "Zip Code", :name => "zip_code", :required => "required", :'data-name' => "zip_code"}
    .w-row
