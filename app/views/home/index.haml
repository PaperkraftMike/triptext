%section.content

  %header
    %h1 TEXT ME

  // Section 1
  .destination
    .form-section#first
      %h2 Where do you want to go?
      =form_for @destination, url: {action: "create", controller: "destinations"}, remote: true do |f|
        .row
          .span-2
            %h3.destination Address
          .span-8
          .destination_street
            =f.text_field :street, placeholder: "Your Destination"
        .row
          .span-2
            %h3.zip-code Zip Code
          .span-8
          .destination_zip_code
            =f.text_field :zip_code, placeholder: "Zip Code"
        .row
          .span-2
            =f.submit "Next!", class: "submit submit-destination"

  // Section 2
  .current_location
    .form-section#second
      %h2 Where are you now?
      =form_for @address, url: {action: "create", controller: "addresses"}, remote: true do |f|
        .row
          .span-2
            %h3.destination Address
          .span-8
          .current_street
            =f.text_field :street, placeholder: "Your Current Address"
        .row
          .span-2
            %h3.zip-code Zip Code
          .span-8
          .current_zip_code
            =f.text_field :zip_code, placeholder: "Zip Code"
        .row
          .span-2
            =f.submit "Next!", class: "submit submit-address"

  // Section 3
  .form-section#third
    %h2 Who do you want to text when you arrive?
    =form_for @message, url: {action: "create", controller: "messages"}, remote: true do |f|
      .row
        .span-2
          %h3.cell Cell
        .span-8
          =f.text_field :phone_number
        .drive_time
          =f.hidden_field :drive_time
      .row
        .span-2
          =f.submit "Finish!", class: "button submit-message"
  .map
    #panel
    #directions-panel
    #map_canvas